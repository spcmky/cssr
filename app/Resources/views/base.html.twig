<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset={{ _charset }}"/>
    <meta name="robots" content="noindex,nofollow" />
    <title>Career Success Standards <Rating></Rating></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    {% stylesheets '@css_bootstrap' %}
    <link href="{{ asset_url }}" rel="stylesheet" type="text/css"/>
    {% endstylesheets %}
    {% stylesheets '@css_bootstrap_theme' %}
    <link href="{{ asset_url }}" rel="stylesheet" type="text/css"/>
    {% endstylesheets %}

    <style type="text/css">
        body {
            padding-top: 50px; /* Account for fixed navbar */
        }
        .sidebar-nav {
            padding: 9px 0;
        }

        @media (max-width: 980px) {
            /* Enable use of floated navbar text */
            .navbar-text.pull-right {
                float: none;
                padding-left: 5px;
                padding-right: 5px;
            }
        }

        .dropdown-menu > li.disabled.nav-header > a {
            cursor: default;
            font-size: 14px;
            font-weight: bold;
            text-transform: uppercase;
        }

        .nav > li.disabled.nav-header > a {
            cursor: default;
            font-size: 14px;
            font-weight: bold;
            text-transform: uppercase;
        }

        .breadcrumb {
            margin-top: 10px;
        }
    </style>

    {% javascripts '@js_jquery' %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}

</head>

<body>

<a class="sr-only" href="#content">Skip navigation</a>

<header class="navbar navbar-inverse navbar-fixed-top" role="banner">
    <div class="container">
        <div class="navbar-header">
            <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="{{ path('cssr_main_default_index') }}" class="navbar-brand">Career Success Standards Rating</a>
        </div>
        <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
            <p class="navbar-text pull-right">
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                    <a class="navbar-link" href="{{ path('fos_user_security_logout') }}">
                        {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                    </a>
                {% else %}
                    <a class="navbar-link" href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                {% endif %}
            </p>
            <ul class="nav navbar-nav">
                <li class="dropdpwn">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Center 2 <b class="caret"></b></a>
                    {{ render(controller('CssrMainBundle:Center:showMenu')) }}

                </li>
            </ul>
        </nav>
    </div>
</header>

<div class="container">
    <div class="row">

        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        <div class="col-md-3">

            <div class="sidebar-nav">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Menu</h3>
                    </div>
                    <div class="panel-body">
                        <ul class="nav nav-pills nav-stacked">

                            {% block sidebar %}
                                <li class="nav-header disabled"><a>Current Center</a></li>
                                <li><a href="{{ path('center') }}">Update</a></li>
                                <li class="nav-header disabled"><a>Centers</a></li>
                                <li><a href="{{ path('center') }}">List</a></li>
                                <li><a href="{{ path('center') }}">Reports</a></li>
                                <li><a href="#">Messages</a></li>
                                <li class="nav-header disabled"><a>Users</a></li>
                                <li><a href="{{ path('user') }}">Admins</a></li>
                                <li><a href="{{ path('staff') }}">Staff</a></li>
                                <li><a href="{{ path('student') }}">Students</a></li>
                                <li class="nav-header disabled"><a>Scores</a></li>
                                <li><a href="{{ path('score') }}">List</a></li>
                                <li><a href="#">Staff</a></li>
                                <li><a href="#">Student</a></li>
                                <li class="nav-header disabled"><a>Reports</a></li>
                                <li><a href="#">List</a></li>
                                <li><a href="#">Staff</a></li>
                                <li><a href="#">Student</a></li>
                            {% endblock %}

                        </ul>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}

        <div class="col-md-9 {% if not is_granted("IS_AUTHENTICATED_REMEMBERED") %}col-md-offset-3{% endif %}" role="main">

            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="flash-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            {% block body %}{% endblock %}
            {% block content %}{% endblock %}

        </div>
    </div>
</div>


<footer role="contentinfo">
    <div class="container">
        <p>&copy; Adams &amp; Associates 2013</p>
    </div>
</footer>



{% javascripts '@js_bootstrap' %}
<script src="{{ asset_url }}" type="text/javascript"></script>
{% endjavascripts %}

</body>
</html>