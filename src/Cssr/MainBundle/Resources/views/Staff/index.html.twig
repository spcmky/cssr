{% extends '::base.html.twig' %}

{% block page_header %}
    <h1>Staff</h1>
{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li><a href="{{ path('cssr_main_default_index') }}"><span class="glyphicon glyphicon-home"></span></a></li>
        <li><a href="{{ path('user_setup') }}">Users</a></li>
        <li class="active">Staff</li>
    </ol>
{% endblock %}

{% block body -%}

    <div style="text-align: right; margin-bottom: 5px;"><a href="{{ path('staff_new') }}" class="btn btn-primary">Add Staff</a></div>

    <table class="table table-striped table-bordered staff-list">
        <thead>
        <tr>
            <th>Name</th>
        </tr>
        </thead>
        <tbody>
        {% for staff in staffers %}
            <tr>
                <td><a href="{{ path('staff_show', { 'id': staff.id }) }}">{{ staff.lastname|capitalize }}, {{ staff.firstname|capitalize }} {{ staff.middlename }}</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div style="text-align: right; margin-top: 5px;"><a href="{{ path('staff_new') }}" class="btn btn-primary">Add Staff</a></div>

{% endblock %}
