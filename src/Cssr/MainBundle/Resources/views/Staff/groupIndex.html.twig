{% extends '::base.html.twig' %}

{% block page_header %}
    <h1>{{ group.name }}</h1>
{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li><a href="{{ path('cssr_main_default_index') }}"><span class="glyphicon glyphicon-home"></span></a></li>
        <li><a href="{{ path('user_setup') }}">Users</a></li>
        <li class="active">{{ group.name }}</li>
    </ol>
{% endblock %}

{% block body -%}

    <div style="text-align: right; margin-bottom: 5px;"><a href="{{ path('staff_new',{ 'groupId': group.id }) }}" class="btn btn-primary">Add Member</a></div>

    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>Name</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>
                    {% if group.id == 5 %}
                        <a href="{{ path('staff_show', { 'id': entity.id }) }}">{{ entity.lastname|capitalize }}, {{ entity.firstname|capitalize }} {{ entity.middlename }}</a>

                    {% else %}
                        <a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.lastname|capitalize }}, {{ entity.firstname|capitalize }} {{ entity.middlename }}</a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div style="text-align: right; margin-top: 5px;"><a href="{{ path('staff_new',{ 'groupId': group.id }) }}" class="btn btn-primary">Add Member</a></div>

{% endblock %}
