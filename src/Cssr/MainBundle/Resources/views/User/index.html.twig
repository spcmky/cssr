{% extends '::base.html.twig' %}

{% block page_header %}
    <h1>User List</h1>
{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li><a href="{{ path('cssr_main_default_index') }}"><span class="glyphicon glyphicon-home"></span></a></li>
        <li class="active">Users</li>
    </ol>
{% endblock %}

{% block body -%}

    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>Name</th>
            <th>Title</th>
            <th>Center</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in users %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.firstname }} {{ entity.lastname }}</a></td>
                <td>{{ entity.group_name }}</td>
                <td>{{ entity.center_name }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
