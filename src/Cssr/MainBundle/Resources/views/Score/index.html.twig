{% extends '::base.html.twig' %}

{% block page_header %}
    <h1>Scores</h1>
{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li><a href="{{ path('cssr_main_default_index') }}"><span class="glyphicon glyphicon-home"></span></a></li>
        <li class="active">Scores</li>
    </ol>
{% endblock %}

{% block body %}

    <table class="table table-hover table-bordered" style="font-size:11px;">
        <thead>
        <tr>
            <th>Name</th>
            {% for area in areas %}
                <th style="font-size:9px;">{{ area.name }}</th>
            {% endfor %}
            <th>Total</th>
            <th>Units</th>
            <th>Final</th>
            <th>Merit Status</th>
        </tr>
        </thead>
        <tbody>
        {% for row in scores %}
            <tr>
                {% for col in row %}
                    {% if loop.index > 1 and loop.index < 20 %}
                        <td style="font-size:9px;">{{ col }}</td>
                    {% else %}
                        <td>{{ col }}</td>
                    {% endif %}
                {% endfor %}
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
