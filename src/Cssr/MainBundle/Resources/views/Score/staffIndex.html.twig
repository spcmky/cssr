{% extends '::base.html.twig' %}

{% block page_header %}
    <h1>Staff</h1>
{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li><a href="{{ path('cssr_main_default_index') }}"><span class="glyphicon glyphicon-home"></span></a></li>
        <li class="active"><a href="{{ path('score') }}">Scores</a></li>
        <li class="active">Staff</li>
    </ol>
{% endblock %}

{% block body -%}

    <table class="table table-striped table-bordered staff-list">
        <thead>
        <tr>
            <th>Name</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('score_staff_show', { 'id': entity.id }) }}">{{ entity.lastname|capitalize }}, {{ entity.firstname|capitalize }} {{ entity.middlename|capitalize }}</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
