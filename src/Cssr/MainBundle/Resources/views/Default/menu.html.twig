<div class="sidebar-nav">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Menu</h3>
        </div>
        <div class="panel-body" style="text-align: center;">

                {% block sidebar %}

                    {% if admin %}

                        {% if not center.id %}
                            <a class="btn btn-default" href="{{ path('center') }}">Centers</a>
