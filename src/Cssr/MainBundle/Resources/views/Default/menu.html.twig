                        {% else %}
                            <a class="btn btn-default" href="{{ path('center_edit', { 'id': center.id }) }}">Center Setup</a>
                            <a class="btn btn-default" href="{{ path('user_setup') }}">User Setup</a>
                            <a class="btn btn-default" href="{{ path('score') }}">Update Scores</a>
                            <a class="btn btn-default" href="{{ path('user') }}">View Scores</a>
                            <a class="btn btn-default" href="{{ path('report') }}">Reports</a>
                        {% endif %}

                    {% else %}
                        <a class="btn btn-default" href="{{ path('score_student_show', { 'id': user.id }) }}">View Scores</a>
                    {% endif %}


                {% endblock %}

        </div>
