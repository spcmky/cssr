{% extends '::base.html.twig' %}

{% block page_header %}
    <h1>Friday {% if type %}<small>{{type}}</small>{%endif%} {% if comments %}<small>w/ Comments</small>{%endif%}</h1>
{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li><a href="{{ path('cssr_main_default_index') }}"><span class="glyphicon glyphicon-home"></span></a></li>
        <li><a href="{{ path('report') }}">Reports</a></li>
        <li class="active">Friday</li>
    </ol>
{% endblock %}

{% block body -%}

    <p>Scores for the week of {{period_start.format('m/d/Y')}} - {{period_end.format('m/d/Y')}}</p>

    <select name="periodSelector" id="periodSelector">
        {% for date in periods %}
            <option value="{{ date.format('Y-m-d') }}" {% if date.format('Y-m-d') == period.format('Y-m-d') %}selected="selected"{%endif%}>{{ date.format('m/d/Y') }}</option>
        {% endfor %}
    </select>

    <table class="table table-hover table-bordered" style="font-size:11px;">
        <thead>
            <tr>
                <th>Name</th>
                {% for area in areas %}
                <th style="font-size:9px;">{{ area.name }}</th>
                {% endfor %}
                <th>Final</th>
                <th>Merit Status</th>
            </tr>
        </thead>
        <tbody>
        {% for row in reports %}
            <tr>
                <td><a href="{{ path('student_show', { 'id': row.id }) }}">{{ row.lastname|capitalize }}, {{ row.firstname|capitalize }} {{ row.middlename|capitalize }}</a></td>
                {% for score in row.scores %}
                    {% if score is iterable %}
                        {% if score.comment %}
                            <td style="text-align: center;"><span class="score-comment-popover" data-placement="top" data-content="{{ score.comment }}">{{ score.value }}</span></td>
                        {% else %}
                            <td style="font-size:9px; text-align: center;">{{ score.value }}</td>
                        {% endif %}
                    {% else %}
                        <td style="font-size:9px;">{{ score }}</td>
                    {% endif %}
                {% endfor %}
                <td style="text-align: center;"><strong>{{ row.avgScore }}</strong></td>
                <td style="text-align: center;">{{ row.rating }}</td>
            </tr>

                {% for score in row.scores %}
                    {% if score is iterable %}
                        <tr>
                            <td colspan="21" style="background-color: #f7f7f7;">

                                <div class="row">
                                    <div class="col-lg-1" style="text-align: center;">{{ score.name}}</div>
                                    <div class="col-lg-1" style="text-align: center;">{{ score.value}}</div>
                                    <div class="col-lg-3">
                                        {% for standard in score.standards %}
                                            {{ standard }}<br/>
                                        {% endfor %}
                                    </div>
                                    <div class="col-lg-7">
                                        <p>{{ score.comment }}</p>
                                        <small>Updated by Chris Edwards on 9/12/2013</small>
                                    </div>
                                </div>

                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}

        {% endfor %}
        </tbody>
    </table>


{% endblock %}
