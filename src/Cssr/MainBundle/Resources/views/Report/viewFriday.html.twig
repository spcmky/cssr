{% extends '::base.html.twig' %}

{% block page_header %}
    <h1>Friday {% if type %}<small>{{type}}</small>{%endif%}</h1>
{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li><a href="{{ path('cssr_main_default_index') }}"><span class="glyphicon glyphicon-home"></span></a></li>
        <li><a href="{{ path('report') }}">Reports</a></li>
        <li class="active">Friday</li>
    </ol>
{% endblock %}

{% block body -%}

    <p>Scores for the week of 8/31/2013-9/6/2013</p>

    <select name="periods">
        {% for period in periods %}
            <option>{{ period.period | date('Y-m-d') }}</option>
        {% endfor %}
    </select>

    <table class="table table-hover table-bordered" style="font-size:11px;">
        <thead>
            <tr>
                <th>Name</th>
                {% for area in areas %}
                <th style="font-size:9px;">{{ area.name }}</th>
                {% endfor %}
                <th>Final</th>
                <th>Merit Status</th>
            </tr>
        </thead>
        <tbody>
        {% for row in reports %}
            <tr>
                <td>{{ row.lastname }}, {{ row.firstname }}</td>
                {% for score in row.scores %}
                <td style="font-size:9px;">{{ score }}</td>
                {% endfor %}
                <td>{{ row.avgScore }}</td>
                <td>{{ row.rating }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
