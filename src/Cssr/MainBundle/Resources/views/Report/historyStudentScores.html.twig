{% extends '::base.html.twig' %}

{% block page_header %}
    <h1>Student History {% if comments %}<small>w/ Comments</small>{%endif%}</h1>
{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li><a href="{{ path('cssr_main_default_index') }}"><span class="glyphicon glyphicon-home"></span></a></li>
        <li><a href="{{ path('report') }}">Reports</a></li>
        <li><a href="{{ path('history_student') }}">Student History</a></li>
        <li class="active">{{ student.lastname|capitalize }}, {{ student.firstname|capitalize }} {{ student.middlename|capitalize }}</li>
    </ol>
{% endblock %}

{% block body -%}

    <h3>Scores for <a href="{{ path('student_show', { 'id': student.id }) }}">{{ student.lastname|capitalize }}, {{ student.firstname|capitalize }} {{ student.middlename|capitalize }}</a></h3>

    {% if student.periods|length > 0 %}

    <table class="table table-hover table-bordered" style="font-size:11px;">
        {% for period, report in student.periods %}
            <thead>
            <tr>
                <th>Date</th>
                {% for area in areas %}
                    <th style="font-size: 9px; padding: 8px 14px 8px 2px;">{{ area.name }}</th>
                {% endfor %}
                <th style="padding: 8px 14px 8px 2px;">Final</th>
                <th>Merit Status</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{ period|date("m/d/Y") }}</td>
                {% for score in report.scores %}
                    {% if score is iterable %}
                        {% if score.comment is defined %}
                            <td style="text-align: center;"><span class="score-comment-popover">{{ score.value }}</span></td>
                        {% else %}
                            <td style="font-size:9px; text-align: center;">{{ score.value }}</td>
                        {% endif %}
                    {% else %}
                        <td style="font-size:9px; text-align: center;">{{ score }}</td>
                    {% endif %}
                {% endfor %}
                <td style="text-align: center;"><strong>{{ report.avgScore }}</strong></td>
                <td style="text-align: center;">{{ report.rating }}</td>
            </tr>
            </tbody>
        {% endfor %}
    </table>
    {% else %}
        <p>No scores found.</p>
    {% endif %}


{% endblock %}

